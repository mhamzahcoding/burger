<div class="container border border-danger rounded">
  <div class="row">
    <div class="col-md-12 text-center" id="top-bar">
    <h1>Add your favorite burger!</h1>
  </div>
  <div class="col-md-6 text-center" class="task">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-8 text-center mt-3">
					<pre class="menu">{{this.id}}. {{this.burger_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-md-4 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="menu btn btn-default btn-danger mb-3">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control mt-3 eaten" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
    <div class="col-md-4 text-center enter_section"></div>
		<div class="col-md-4 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control menu my-3" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a burger to eat.<br>
        Then click "Submit."</p>
		</div>
    		<div class="col-md-4 text-center enter_section"></div>

	</div>
</div>
